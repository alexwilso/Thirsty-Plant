<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wilson.thirstyplant" >

    <uses-feature
        android:name="android.hardware.Camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.wilson.thirstyplant.controller.ToFertilize" />
        <activity android:name="com.wilson.thirstyplant.controller.ToWater" />
        <activity android:name="com.wilson.thirstyplant.activities.DisplayPlant" />
        <activity android:name="com.wilson.thirstyplant.activities.FertilizeSchedule" />
        <activity android:name="com.wilson.thirstyplant.activities.MyPlants" />
        <activity android:name="com.wilson.thirstyplant.activities.WaterSchedule" />
        <activity android:name="com.wilson.thirstyplant.activities.AddPlant" />
        <activity android:name="com.wilson.thirstyplant.activities.Home" />
        <activity android:name="com.wilson.thirstyplant.activities.CreateUser" />
        <activity android:name="com.wilson.thirstyplant.activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <receiver android:name="com.wilson.thirstyplant.receivers.WaterReceiver" />
        <receiver android:name="com.wilson.thirstyplant.receivers.FertilizeReceiver" />
    </application>

</manifest>